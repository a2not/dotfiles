[includeIf "gitdir:~/work/"]
  path = ~/.gitconfig_work

[includeIf "gitdir:/Users/"]
  path = ~/.gitconfig_mac

[core]
  editor = nvim
  quotepath = false
[color]
  ui = auto

[init]
  defaultBranch = main
[fetch]
  prune = true
[pull]
  rebase = false
[push]
  autoSetupRemote = true
[merge]
  conflictstyle = diff3
[rerere]
  enabled = True

[commit]
  gpgsign = True
[tag]
  gpgsign = true
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[diff]
  tool = difftastic
  external = difft
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true

