{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": [
    "AGENTS.md",
    "CONTRIBUTING.md",
    "docs/guidelines.md",
    ".cursor/rules/*.md",
    "CLAUDE.md"
  ],
  "keybinds": {
    "leader": "ctrl+o"
  },
  "tools": {
    "bash": true,
    "write": true
  },
  "model": "sakura/Qwen3-Coder-480B-A35B-Instruct-FP8",
  "provider": {
    "github-copilot": {
      "npm": "@github/copilot",
      "name": "GitHub Copilot",
      "models": {
        "gpt-4.1": {
          "name": "GPT-4.1"
        }
      }
    },
    "sakura": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Sakura AI Engine",
      "options": {
        "baseURL": "https://api.ai.sakura.ad.jp/v1",
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {
        "Qwen3-Coder-480B-A35B-Instruct-FP8": {
          "name": "Qwen3-Coder-480B-A35B-Instruct-FP8"
        },
        "Qwen3-Coder-30B-A3B-Instruct": {
          "name": "Qwen3-Coder-30B-A3B-Instruct"
        }
      }
    }
  },
  "disabled_providers": [
    "openai",
    "gemini",
    "opencode"
  ],
  // NOTE: agents from https://gist.github.com/mjakl/490ef1d85fffea810dfe2f17069bc08b
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    }
  }
}
